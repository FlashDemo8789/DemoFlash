# Application Environment
ENVIRONMENT=development  # development, staging, production
LOG_LEVEL=info  # debug, info, warning, error, critical
PORT=8000

# Database
DATABASE_URL=sqlite:///flashcamp.db
# For PostgreSQL: postgresql://user:password@host:port/dbname
# DATABASE_URL=postgresql://postgres:postgres@db:5432/flashcamp

# Security
SECRET_KEY=your_secret_key_here  # Change this to a random secure string
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Paths
MODEL_PATH=models/
DATA_PATH=data/gold/
FLASHDNA_MODEL=models/success_xgb.joblib
REPORT_TEMPLATE_PATH=reports/templates/
REPORT_OUTPUT_PATH=reports/pdf/

# Monitoring
PROMETHEUS_ENABLED=true 